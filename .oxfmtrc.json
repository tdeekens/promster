{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "experimentalSortImports": {},
  "ignorePatterns": [
    "**/dist/**",
    "**/.changeset",
    "**/CHANGELOG.md",
    "**/pnpm-lock.yaml",
    "**/pnpm-workspace.yaml"
  ]
}
